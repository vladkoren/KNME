<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vladkoren.knme_encryptor.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/resultTxt"
            android:layout_width="347dp"
            android:layout_height="183dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:selectAllOnFocus="true"
            android:textIsSelectable="true"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="297dp" />

        <Button
            android:id="@+id/cryptBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/resultTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="63dp"
            android:onClick="crypt"
            android:text="Crypt!"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="195dp" />

        <EditText
            android:id="@+id/startTxtF"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cryptBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="89dp"
            android:ems="10"
            android:hint="Type here"
            android:inputType="text"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/startTxtF"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="29dp"
            android:text="Enter text : "
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="104dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
